<?xml version="1.0" encoding="utf-8"?>
<com.pumpkin.ui.widget.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carousel_item_container"
    android:layout_width="126dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="3dp"
    app:shapeAppearance="@style/ShapeAppearance.M3.Sys.Shape.Corner.Medium">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/carousel_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
</com.pumpkin.ui.widget.carousel.MaskableFrameLayout>