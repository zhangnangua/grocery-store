<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Main" parent="Theme.Applets_Container">
        <!--        隐藏状态栏-->
        <!--        <item name="windowActionBar">false</item>-->
        <!--        隐藏标题栏-->
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        状态栏透明色-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--  状态栏颜色  -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--  导航栏字体黑色 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.Start" parent="Theme.SplashScreen.IconBackground">
        <!--启动画面背景颜色-->
        <item name="windowSplashScreenBackground">@color/colorPrimaryContainer</item>
        <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_anim2</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/colorOnPrimary</item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
<!--        <item name="windowSplashScreenAnimationDuration">200</item>-->
        <!-- 启动画面底部的 Brand 图片-->
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/brand_img</item>-->

        <!--    真正的Main界面主题    -->
        <item name="postSplashScreenTheme">@style/Theme.Main</item>
    </style>
</resources>